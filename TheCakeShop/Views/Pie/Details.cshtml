model TheCakeShop.Models.Pie
@{
    ViewData["Title"] = "Details";
}


<h2>@Model.Name Details</h2>

<div class="thumbnail">

    <img alt="@Model.Name" src="@Model.ImageUrl" />
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price</h3>
        <h5>
            <a href="#">@Model.Name</a>

        </h5>
        <h4>@Model.ShortDescription</h4>
        <p>@Model.LongDescription</p>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-pieId="@Model.PieId">Add to cart</a>

            </p>

        </div>
    </div>
    <a class="btn btn-info" asp-controller="Pie"
       asp-action="Index">Back To List</a>
</div>